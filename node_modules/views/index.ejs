<!DOCTYPE html>
<html>
    <head>
         <title>Blog App</title>
         <link rel="stylesheet"  href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.css">
         <link rel="stylesheet"  href="/stylesheets/app.css">    
    </head> 
    <body>


     <div class="ui fixed inverted menu">
         <div class="ui container">
             <div class="header item"><i class="comments icon"></i>Blog Site</div>
             <a href="/" class="item">Home</a>
             <a href="/blogs/new" class="item">New Post</a>
            </div>
     </div>
<br><br><br><br>

<div class="ui main text container">
    <div class="ui top attcahed segment">
        <div class="ui divided items">
                <% Blog.forEach(function(Blog){%>
                    <div class="item">
                        <div class="image">
                             <img src="<%= Blog.image %>">
                        </div>
                        <div class="content">
                            <a class="header" href="/blog/<%= Blog._id%>"><%= Blog.title %></a>
                                <div class="meta">
                                        <span><%= Blog.created %></span>
                                </div>
                                <div class="description">
                                    <p><%= Blog.body %></p>
                                </div>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button " href="/blogs/<%= Blog._id%>">Read More<i class="right chevron icon"></i></a>
                        </div>  
                    </div>
                 <% }) %>
        </div>
    </div>
</div>


    </body>
</html>